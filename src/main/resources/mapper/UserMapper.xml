<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.rgks_rear.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.rgks_rear.pojo.User">
        <id column="user_id" property="userId" />
        <result column="nick_name" property="nickName" />
        <result column="email" property="email" />
        <result column="password" property="password" />
        <result column="mytype" property="mytype" />
        <result column="create_time" property="createTime" />
        <result column="modified_time" property="modifiedTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        user_id, nick_name, email, password, mytype, create_time, modified_time
    </sql>

</mapper>
